@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Salón de Belleza</title>

    <link href="~/css/Principal.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500&family=Open+Sans&display=swap" rel="stylesheet" />
  

    @RenderSection("Head", required: false)
</head>
<body>

    <nav class="navbar">
        <div class="logo">
            <a asp-page="/Index">
            <img src="~/img/Bts.png" alt="Logo del salón" width="50px" />
            </a>
            <span>Beauty Salon</span>
        </div>
        <div class="nav-links">
            
            <a asp-area="" asp-page="/Usuarios/Login-register">Iniciar Sesión</a>
            <a asp-area="" asp-page="/Contacto">Contacto</a>
            <a asp-area="" asp-page="/Informacion">Información</a>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer class="simple-footer">
        <div class="footer-content">
            <p>&copy; @DateTime.Now.Year Salón de Belleza. Todos los derechos reservados.</p>
            <nav class="footer-links">
                <a asp-page="/Index">Inicio</a>
                <a asp-page="/Contacto">Contacto</a>
                <a asp-page="/Informacion">Información</a>
            </nav>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
