@page
@model SalonDeBelleza.src.views.Usuarios.LoginModel
<header>

    href="~/css/Login.css" asp-append-version="true"


</header>
<h2>Iniciar Sesión</h2>

<form method="post">
    @Html.AntiForgeryToken() <!-- Asegúrate de incluir esto -->
    
    <div>
        <label>Email</label>
        <input asp-for="Email" required />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" required />
    </div>
    <button type="submit">Iniciar Sesión</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div>
        <h4>Errores:</h4>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}