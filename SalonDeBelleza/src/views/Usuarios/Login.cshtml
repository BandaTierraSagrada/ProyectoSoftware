@page
@model SalonDeBelleza.src.views.Usuarios.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>

<body>
    <div class="login">

        @if (!string.IsNullOrEmpty(Model.Mensaje))
        {
            <div class="alert alert-danger">@Model.Mensaje</div>
        }
        <form method="post">
            @Html.AntiForgeryToken()
            <h2>Iniciar Sesión</h2>

            <div class="input">
                <input type="email"
                       id="Email"
                       name="Email"
                       placeholder="Correo"
                       required />
            </div>
            <div class="input">
                <input type="password"
                       id="Password"
                       name="Password"
                       placeholder="Contraseña"
                       required />
            </div>

            <button type="submit" class="btn">Iniciar Sesión</button>

            <div class="rgt">
                <p>
                    ¿No tienes cuenta?
                    <a asp-page="/Usuarios/Register">Regístrate aquí</a>
                </p>
            </div>
        </form>
    </div>
</body>
</html>
